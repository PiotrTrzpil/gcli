{
  "compilerOptions": {
    "skipLibCheck": true,
    "sourceMap": true,
    "pretty": true,
    "noImplicitReturns": true,
    "alwaysStrict": true,
    "strict": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "emitDecoratorMetadata": true,
    "target": "esnext",
    "lib": [
      "es2017",
      "dom",
      "es6",
      "es2015.promise",
      "esnext.asynciterable",
      "es2015.iterable"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": ["reflect-metadata", "node"],
    "outDir": "lib",
    "module": "commonjs",
    "moduleResolution": "node"
  }
}
